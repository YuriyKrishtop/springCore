<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="ua.epam.spring.core.beans.Client">
        <constructor-arg index="1" value="John Smith"/>
        <constructor-arg index="0" value="1"/>
    </bean>

    <bean id="eventLogger" class="ua.epam.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="ua.epam.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="src/main/resources/mylog.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="ua.epam.spring.core.loggers.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="src/main/resources/mylog.txt"/>
        <constructor-arg value="4"/>
    </bean>

    <bean id="app" class="ua.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="event" class="ua.epam.spring.core.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

</beans>